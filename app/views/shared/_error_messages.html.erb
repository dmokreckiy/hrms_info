<% if @page.errors.any? %>  
  <div id="error_explanation"> 
    <div class="alert alert-error">
      The form contains <%= pluralize(@page.errors.count, "error") %>.  
    </div>
    <ul>
    <% @page.errors.full_messages.each do |msg| %> 
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>