<h2>Create a new page</h2>
<%= form_for(@page)  do |f| %>

  <div  class = "buttons">   
    <%= f.submit "Save page", class: "btn btn-success", float: "right"%>
    <a href="#"  <%= f.button "View",  class: "btn btn-success", float: "right" %></a>
    <a href="#"  <%= f.button "Apply",  class: "btn btn-success", float: "right" %></a>
    <a href="/pages"  <%= f.button "Cancel",  class: "btn btn-success", float: "right", data: { confirm: "Are you sure?" } %></a>
  </div> 


<div class="tabbable" id = "tabbable"> 
  <ul class="nav nav-tabs">
    <li class = "active"><a href="/pages/new" data-toggle="tab">Pages</a></li>
    <li><a href="/pages/new/#" data-toggle="tab">Content</a></li>
  </ul>
    <div class="tab-content">
      <div class="tab-pane active" id="tab1">
      
      <div class="row">
        <div class="span6 offset3" >

          <div class="title">
            <div class="title-label"> <%= f.label :page_title %> </div>
            <div class="title-field"> <%= f.text_field :page_title %> </div>
          </div>
        
          <div class="page_url">
            <div class="page_url-label"><%= f.label :page_url %></div>
            <div class="page_url-field"><%= f.text_field :page_url %></div> 
          </div>

          <div class="keywords">
            <div class="keywords-label"><%= f.label :keywords %></div>
            <div class="keywords-field"><%= f.text_field :keywords %></div>
          </div>

          <div class="description">
            <div class="description-label"><%= f.label :description %></div>
            <div class="description-field"><%= f.text_area :description %></div>
          </div>


          <div class="parent_page">
            <div class="parent_page-label"><%= f.label :parent_page_id %> </div>
            <%= f.select(:parent_page_id, options_for_select(['None'])) %>
          </div>

          <div class="page_type">
            <div class="page_type-label"><%= f.label :page_type %> </div>
            <%= f.select(:page_type, options_for_select(['None'])) %>
          </div>

          <div class="display_at_the_menu">
            <div class="display_at_the_menu-label"><%= f.label("Display at the menu") %></div>
            <div class="topmenu-label" align="center" ><%= f.label("Top menu") %></div>
            <div class="checkbox_top" align="center"><%= f.check_box(:display_top_menu) %></div>
            <div class="botmenu-label" align="center"><%= f.label("Bottom menu")%></div>
            <div class="checkbox-bot" align="center"><%= f.check_box(:display_bottom_menu) %></div>
          </div>

          <div class="published">
            <div class="published-label" align ="right"><%= f.label("Published") %>
            <div class="published-checkbox" align ="center"><%= f.check_box(:published) %> 
          </div>

        

      </div>
      </div>
    </div>

      <div class="tab-pane" id="tab2">
      </div>
    
    </div>
  </div>
<% end %>